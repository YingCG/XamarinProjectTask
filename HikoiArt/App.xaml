<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HikoiArt.App" >
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="darkOliveGreen">DarkOliveGreen</Color>
            <Color x:Key="whiteColor">#ffffff</Color>
            <Font x:Key="buttonFont">Roboto</Font>

            <Style x:Key="normalButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource darkOliveGreen}"/>
                <Setter Property="TextColor" Value="{StaticResource whiteColor}"/>
                <Setter Property="Font" Value="{StaticResource buttonFont}"/>
                <Setter Property="CornerRadius" Value="50"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>