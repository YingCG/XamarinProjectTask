<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HikoiArt.Views.EditPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listview"/>
            <Entry x:Name="ID" Keyboard="Text" Placeholder="ID" IsVisible="False"></Entry>
            <Entry x:Name="name" Keyboard="Text" Placeholder="Item Name"></Entry>
            <Entry x:Name="inventory" Keyboard="Text" Placeholder="Number of Item"></Entry>
            <Button x:Name="update" Text="Update" Clicked="update_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>