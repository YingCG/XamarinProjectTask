<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HikoiArt.Views.GetDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="Ihaveamovingcastle.JPG"/>
        <StackLayout Margin="20">
            
            
            <Label Text="View all our resource details"/>
            <ListView x:Name="listview"></ListView>
            
            <ImageButton x:Name="homeBtn"
                         Source="tree.png"
                         CornerRadius="50"
                         Margin="20"
                         HeightRequest="50"
                         WidthRequest="50"
                         HorizontalOptions="Center"
                         Padding="5"
                         BackgroundColor="DarkOliveGreen"
                         Clicked="homeBtn_Clicked"/>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>